{
  "name": "@cycosoft/eyas",
  "version": "1.0.0",
  "description": "A \"shift-left\" serverless testing solution for static web applications",
  "publishConfig": {
    "access": "public"
  },
  "main": "eyas.min.js",
  "bin": {
    "eyas": "./cli.min.js"
  },
  "scripts": {
    "_______________DEV_______________": "",
    "dev:bundler": "node src/bundler.js",
    "demo": "electron .",
    "dev": "npm i && npm-check -u && electron --trace-warnings src/eyas.js",
    "build": "npm run build:eyas && npm run build:cli && npm run build:bundler",
    "bundle": "npm ci && npm run build && npm pack",
    "_____________PUBLISH_____________": "",
    "publish": "npm ci && npm run dist:clear && npm run build && pkg dist/bundler.min.js --compress --debug --config pkg.config.json --out-path dist",
    "_____________SCRIPTS_____________": "",
    "build:eyas": "uglifyjs src/eyas.js -c -m --toplevel --output dist/eyas.min.js",
    "build:cli": "uglifyjs src/cli.js -c -m --toplevel -o dist/cli.min.js",
    "build:bundler": "uglifyjs src/bundler.js -c -m --toplevel -o dist/bundler.min.js",
    "dist:clear": "shx rm -rf dist && shx mkdir dist"
  },
  "author": "Cycosoft, LLC (https://cycosoft.com)",
  "homepage": "https://cycosoft.com",
  "license": "GPL-3.0",
  "keywords": [
    "testing",
    "static",
    "web",
    "applications",
    "server"
  ],
  "files": [
    "dist",
    "README.md"
  ],
  "dependencies": {
    "electron": "^26.1.0",
    "express": "^4.18.2",
    "mkcert": "^3.0.0",
    "url-parse": "^1.5.10",
    "validator": "^13.11.0"
  },
  "devDependencies": {
    "eslint": "^8.48.0",
    "npm-check": "^6.0.1",
    "pkg": "^5.8.1",
    "shx": "^0.3.4",
    "uglify-js": "^3.17.4"
  },
  "overrides": {
    "package-json": ">6.5.0 <8.0.0"
  }
}
